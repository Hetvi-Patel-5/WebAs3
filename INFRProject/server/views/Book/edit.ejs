<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!--Content for add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title%></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control" id="nameTextField"
                    placeholder="Enter Expense Name" name="Name" value="<%= Book.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="amountTextField">Expense Amount</label>
                    <input type="text" class="form-control" id="amountTextField"
                    placeholder="Enter the Amount" name="Amount" value="<%= Book.Amount %>" required>
                </div>
                <div class="form-group">
                    <label for="dayTextField">Day</label>
                    <input type="text" class="form-control" id="dayTextField"
                    placeholder="Enter the Day" name="Day" value="<%= Book.Day %>" required>
                </div>
                <div class="form-group">
                    <label for="monthTextField">Month</label>
                    <input type="text" class="form-control" id="monthTextField"
                    placeholder="Enter the Month" name="Month" value="<%= Book.Month %>" required>
                </div>
                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control" id="yearTextField"
                    placeholder="Enter the Year" name="Year" value="<%= Book.Year %>" required>
                </div>
                <div class="form-group">
                    <label for="categoryTextField">Date</label>
                    <input type="text" class="form-control" id="categoryTextField"
                    placeholder="Enter the Category" name="Category" value="<%= Book.Category %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
                <i class = "fas fa-edit"></i>

                <button class="btn btn-warning" type="submit">Cancel</button>
                <i class = "fas fa-undo"></i>
            </form>
        </div>
    </div>
</div>




<%- include ../Partials/footer.ejs %>