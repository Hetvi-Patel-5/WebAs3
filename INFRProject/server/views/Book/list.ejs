<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<main class="container">
    <div class="row">
        <div class="col py-3">
            <h1><%= title %></h1>
            <br>
            <a href="/transactions/add" class="btn tn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Expense
            </a>
        <table class="table table-bordered table-striped table-hover">
            <!--Table Header-->
            <tr class="d-flex">
                <th class="text-center col-2">Name</th>
                <th class="text-center col-2">Amount</th>
                <th class="text-center col-1">Day</th>
                <th class="text-center col-1">Month</th>
                <th class="text-center col-1">Year</th>
                <th class="text-center col-2">Category</th>
            </tr>
            <% for(let count=0;count<BookList.length;count++) { %>
            <tr class="d-flex">
                <td class="text-center col-2"><%= BookList[count].Name %></td>
                <td class="text-center col-2"><%= BookList[count].Amount %></td>
                <td class="text-center col-1"><%= BookList[count].Day %></td>
                <td class="text-center col-1"><%= BookList[count].Month %></td>
                <td class="text-center col-1"><%= BookList[count].Year %></td>
                <td class="text-center col-2"><%= BookList[count].Category %></td>
                <td class="text-center col-1">
                    <a href="/transactions/edit/<%= BookList[count]._id%>" 
                        class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i>Edit
                    </a>
                </td>
                <td class="text-center col-1">
                    <a href="/transactions/delete/<%= BookList[count]._id%>" 
                        class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>Delete
                    </a>
                </td>
            </tr>
            <% } %>
        </table>
        </div>
    </div>
</main> 
<%- include ../Partials/footer.ejs %>