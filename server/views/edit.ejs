<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control" id="descriptionTextField"
                    placeholder="Enter Workout Description" name="Description" value="<%= workout.Description %>" required>
                </div>
                <div class="form-group">
                    <label for="minutesTextField">Duration (in minutes)</label>
                    <input type="number" class="form-control" id="minutesTextField"
                    placeholder="Enter Duration" name="Minutes" value="<%= workout.Minutes %>" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="date" class="form-control" id="dateTextField"
                    name="Date" value="<%= workout.Date %>" required>
                </div>
                <div class="form-group">
                    <label for="notesTextField">Notes</label>
                    <textarea class="form-control" id="notesTextField"
                    placeholder="Enter any Notes" name="Notes"><%= workout.Notes %></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Save Changes</button>
                <i class="fas fa-save"></i>
                <a href="/track" class="btn btn-warning">Cancel</a>
                <i class="fas fa-undo"></i>
            </form>

        </div>
    </div>
</div>

<%- include partials/footer.ejs %>