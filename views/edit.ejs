<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Workout Name</label>
                    <input type="text" class="form-control" id="nameTextField"
                    placeholder="Enter Workout Name" name="Name" value="<%= Workout.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="durationTextField">Duration (in minutes)</label>
                    <input type="number" class="form-control" id="durationTextField"
                    placeholder="Enter Duration" name="Duration" value="<%= Workout.Duration %>" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="date" class="form-control" id="dateTextField"
                    name="Date" value="<%= Workout.Date %>" required>
                </div>
                <div class="form-group">
                    <label for="typeDropdown">Type of Exercise</label></br>
                    <select name="Type" class="form-control">
                        <option value="Cardio" <%= Workout.Type === 'Cardio' ? 'selected' : '' %>>Cardio</option>
                        <option value="Strength" <%= Workout.Type === 'Strength' ? 'selected' : '' %>>Strength</option>
                        <option value="Flexibility" <%= Workout.Type === 'Flexibility' ? 'selected' : '' %>>Flexibility</option>
                        <option value="Other" <%= Workout.Type === 'Other' ? 'selected' : '' %>>Other</option>
                    </select>
                </div>
                <button class="btn btn-primary" type="submit">Save Changes</button>
                <i class="fas fa-save"></i>
                <a href="/workouts" class="btn btn-warning">Cancel</a>
                <i class="fas fa-undo"></i>
            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
