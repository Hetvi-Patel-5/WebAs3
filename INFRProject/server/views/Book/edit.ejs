<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!--Content for add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title%></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control" id="nameTextField"
                    placeholder="Enter Expense Name" name="Name" value="<%= Book.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="amountTextField">Expense Amount</label>
                    <input type="text" class="form-control" id="amountTextField"
                    placeholder="Enter the Amount" name="Amount" value="<%= Book.Amount %>" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="text" class="form-control" id="dateTextField"
                    placeholder="Enter the Date" name="Date" value="<%= Book.Date %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
                <i class = "fas fa-edit"></i>

                <button class="btn btn-warning" type="submit">Cancel</button>
                <i class = "fas fa-undo"></i>
            </form>
        </div>
    </div>
</div>




<%- include ../Partials/footer.ejs %>