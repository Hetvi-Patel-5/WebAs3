<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for Add Workout Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <!-- Form to Add Workout -->
            <form class="form" method="POST">
                <!-- Workout Date -->
                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="date" class="form-control" id="dateTextField" placeholder="Enter Workout Date" name="Date" required>
                </div>
                <!-- Workout Description -->
                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control" id="descriptionTextField" placeholder="Enter Workout Description" name="Description" required>
                </div>
                <!-- Workout Duration -->
                <div class="form-group">
                    <label for="minutesTextField">Duration (in minutes)</label>
                    <input type="number" class="form-control" id="minutesTextField" placeholder="Enter Duration in Minutes" name="Minutes" required>
                </div>
                <!-- Calories Burned -->
                <div class="form-group">
                    <label for="caloriesTextField">Calories Burned</label>
                    <input type="number" class="form-control" id="caloriesTextField" placeholder="Enter Calories Burned" name="Calories" required>
                </div>
                <!-- Notes -->
                <div class="form-group">
                    <label for="notesTextField">Notes</label>
                    <textarea class="form-control" id="notesTextField" placeholder="Add Any Notes (Optional)" name="Notes" rows="3"></textarea>
                </div>
                <br>
                <!-- Submit and Reset Buttons -->
                <button class="btn btn-primary" type="submit">
                    Submit <i class="fas fa-check-circle"></i>
                </button>
                <button class="btn btn-warning" type="reset">
                    Reset <i class="fas fa-undo"></i>
                </button>
            </form>
            
            <!-- Table to Display Existing Workouts -->
            <% if (TrackerList && TrackerList.length > 0) { %>
                <h2>Existing Workouts</h2>
                <table class="table table-bordered mt-4">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Duration (minutes)</th>
                            <th>Calories Burned</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% TrackerList.forEach(workout => { %>
                            <tr>
                                <td><%= workout.date %></td>
                                <td><%= workout.description %></td>
                                <td><%= workout.minutes %></td>
                                <td><%= workout.calories %></td>
                                <td><%= workout.notes || 'N/A' %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No workouts available. Add a workout to see the list.</p>
            <% } %>

        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>